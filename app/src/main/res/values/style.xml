<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Title">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/TitleColor</item>
        <item name="android:fontFamily">@font/lexend_deca</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>
    <style name="Text">
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@color/TextColor</item>
        <item name="android:fontFamily">@font/lexend_deca</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>
    <style name="Import">
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:fontFamily">@font/lexend_deca</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@drawable/button_border</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">40dp</item>
        <item name="android:paddingRight">40dp</item>
    </style>
    <style name="Save">
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@color/background_color</item>
        <item name="android:fontFamily">@font/lexend_deca</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@drawable/button_border_fill</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">40dp</item>
        <item name="android:paddingRight">40dp</item>
    </style>
    <style name="Cancel">
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/lexend_deca</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@drawable/button_border_fill</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
    </style>
    <style name="SettingsButton">
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:background">@drawable/settings_image</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">50dp</item>
    </style>
    <style name="SettingsBox">
        <item name="android:background">@drawable/box_up</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">10dp</item>
    </style>
    <style name="SettingsName">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/lexend_deca</item>
        <item name="android:textSize">15dp</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="SettingsSwitch">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="thumbColor">@color/blue</item>
        <item name="trackTint">@color/white</item>
    </style>
</resources>