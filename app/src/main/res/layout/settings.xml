<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/opacity_color"
    android:gravity="center">
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/pop_up"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:background="@drawable/pop_up">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lexend_deca"
                android:text="Settings"
                android:textColor="@color/white"
                android:textSize="20dp"/>
        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="225dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:orientation="vertical">
                <LinearLayout
                    style="@style/SettingsBox">
                    <TextView
                        style="@style/SettingsName"
                        android:text="Change to Light Mode"/>
                    <Switch
                        style="@style/SettingsSwitch"/>
                </LinearLayout>
                <LinearLayout
                style="@style/SettingsBox">
                    <TextView
                        style="@style/SettingsName"
                        android:text="Change to Dark Mode"/>
                    <Switch
                        style="@style/SettingsSwitch"/>
                </LinearLayout>
                <LinearLayout
                    style="@style/SettingsBox">
                    <TextView
                        style="@style/SettingsName"
                        android:text="Enable ICMP Frames"/>
                    <Switch
                        style="@style/SettingsSwitch"/>
                </LinearLayout>
                <LinearLayout
                    style="@style/SettingsBox">
                    <TextView
                        style="@style/SettingsName"
                        android:text="Enable TCP Frames"/>
                    <Switch
                        style="@style/SettingsSwitch"/>
                </LinearLayout>
                <LinearLayout
                    style="@style/SettingsBox">
                    <TextView
                        style="@style/SettingsName"
                        android:text="Enable UDP Frames"/>
                    <Switch
                        style="@style/SettingsSwitch"/>
                </LinearLayout>
                <LinearLayout
                    style="@style/SettingsBox">
                    <TextView
                        style="@style/SettingsName"
                        android:text="Enable TCMP Frames"/>
                    <Switch
                        style="@style/SettingsSwitch"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:padding="15dp"
            android:background="@drawable/pop_up">
            <Button
                style="@style/Cancel"
                android:id="@+id/Cancel"
                android:text="Cancel"
                app:backgroundTint="@color/blue"
                app:backgroundTintMode="src_in"
                android:background="@color/transparent"
                android:onClick="CancelSettings"/>
            <Button
                style="@style/Save"
                android:id="@+id/Save"
                android:text="Save"
                app:backgroundTint="@color/blue"
                app:backgroundTintMode="src_in"
                android:onClick="SaveSettings"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>